# ============================================
# Smart Companion - Production Environment
# ============================================
# Copy this file to .env for production deployment

# Environment
ENVIRONMENT=production
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=2

# Database (use persistent storage path for Docker)
DATABASE_URL=sqlite:///./data/smart_companion.db

# Encryption Key (REQUIRED - generate a new one!)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=YOUR_GENERATED_KEY_HERE

# Gemini API (for AI-powered task decomposition)
GEMINI_API_KEY=YOUR_GEMINI_API_KEY
GEMINI_MODEL=gemini-2.0-flash

# CORS Origins (set to your actual domain)
# Example: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT=60

# Max Image Upload Size (10MB)
MAX_IMAGE_SIZE=10485760
