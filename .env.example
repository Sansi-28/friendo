# ============================================
# Smart Companion - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Environment (development | production)
ENVIRONMENT=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database
# For SQLite (default):
DATABASE_URL=sqlite:///./smart_companion.db
# For PostgreSQL (production recommended):
# DATABASE_URL=postgresql://user:password@localhost:5432/smart_companion

# Encryption Key (REQUIRED for production)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# Gemini API (for AI-powered task decomposition)
# Get your key from: https://aistudio.google.com/
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash

# Alternative LLM (OpenAI-compatible API)
LLM_API_URL=
LLM_API_KEY=

# CORS Origins (comma-separated list of allowed origins)
# Use * for development, specific origins for production
CORS_ORIGINS=*

# Rate Limiting (requests per minute per IP)
RATE_LIMIT=60

# Max Image Upload Size (bytes) - default 10MB
MAX_IMAGE_SIZE=10485760
